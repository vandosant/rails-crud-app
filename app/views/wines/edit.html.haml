= form_for @wine do |f|
  - if @wine.errors.present?
    - @wine.errors.full_messages.each do |message|
      = message
      %br
  = f.label :name
  = f.text_field(:name)
  = f.label :style
  = f.text_field(:style)
  = f.label :color
  = f.text_field(:color)
  = f.label :rating
  = f.text_field(:rating)
  = f.submit 'Update'
