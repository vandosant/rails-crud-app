%div{:id => 'header_container'}
  %header
    %h1 Bands
  %nav
    %div{:id => 'nav_container'}
      %ul{:id => 'menu'}
        %li
          %a{:href => '/bands/new'}Create

%div{:id => 'content_container'}
  %table{:class => 'dataset'}
    %tr
      %td Name
      %td Genre
      %td Number of Members
    - @bands.each do |band|
      %tr
        %td
          %a{:href => "/bands/#{band.id}"}=band.name
        %td
          %a{:href => "/bands/#{band.id}"}= band.genre
        %td
          %a{:href => "/bands/#{band.id}"}= band.members